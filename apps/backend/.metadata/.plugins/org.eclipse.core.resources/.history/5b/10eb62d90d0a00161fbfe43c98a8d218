import java.sql.*;

public class sample{
	public static final String url = "jdbc:mysql://localhost/ecom";
	public static final String username = "root";
	public static final String password = "";
	public static final String table = null;
	public static void main(String[]args){
		try{
			Connection conn = DriverManager.getConnection(url,username,password);
			Statement query = conn.createStatement();
			table = "user";
			ResultSet rslt = query.executeQuery("select * from "+table);
			while (rslt.next()){
				System.out.println(rslt.getInt("userid")+" "+rslt.getString("fname")+" "+rslt.getString("lname")+" "+rslt.getString("email")+" "+rslt.getString("password"));
			}
		}catch(Exception ecx){
			ecx.printStackTrace();
		}
	}
}